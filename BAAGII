  <button onclick="showModal('letter')">📜 Read Letter</button>
  <button onclick="showModal('fact')">🍌 Banana Fact</button>
  <button onclick="showModal('joke')">😂 Banana Joke (Trust me)</button>
  <button onclick="showModal('gift')">🎁 Surprise Gift</button>
  <button onclick="showModal('game')">🎮 Banana Simulator</button>
  <button onclick="showModal('song')">🎵 Play Birthday Song</button>
  <button onclick="showModal('gallery')">📸 Funny Gallery</button>
  <button onclick="toggleDarkMode()">🌓 Toggle Dark Mode</button>

  <!-- Modal -->
  <div id="popup" class="modal" onclick="hideModal()">
    <div class="modal-content" onclick="event.stopPropagation()">
      <span class="close" onclick="hideModal()">&times;</span>
      <div id="popupText"></div>
    </div>
  </div>

  <!-- Audio -->
  <audio id="birthdaySong" src="https://www.chosic.com/download-audio/29564/"></audio>

  <script>
    function showModal(type) {
      const popup = document.getElementById("popup");
      const popupText = document.getElementById("popupText");
      let message = "";

      switch(type) {
        case "fact":
          message = "Bruno Mars marsaas yg unendee ireeguu 😱😱!";
          break;
        case "letter":
          message = "";
          break;
        case "gift":
          const gifts = [
            "Odorjin nogoorj untah erh 😴",
            "Bayr hurgey irmuun odoo chamruu 100 reel yuvuulna 😂",
            "Negro of the year award 🏆🍌",
            "Secret: You're my favorite fruit friend"
          ];
          message = gifts[Math.floor(Math.random() * gifts.length)];
          break;
        case "game":
          message = "Banana Simulator: Coming soon 😏";
          break;
        case "song":
          message = '<iframe width="100%" height="300" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/857800439&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true"></iframe><div style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;"><a href="https://soundcloud.com/happy-birthday-official" title="Happy Birthday" target="_blank" style="color: #cccccc; text-decoration: none;">Happy Birthday</a> · <a href="https://soundcloud.com/happy-birthday-official/sets/happy-birthday-47" title="Happy Birthday (Birthday Song Collection)" target="_blank" style="color: #cccccc; text-decoration: none;">Happy Birthday (Birthday Song Collection)</a></div>';
          document.getElementById("birthdaySong").play();
          break;
        case "gallery":
          message = '<div class="gallery">' +
            '<img src="https://via.placeholder.com/100x100.png?text=LOL1" alt="Funny 1" />' +
            '<img src="https://via.placeholder.com/100x100.png?text=LOL2" alt="Funny 2" />' +
            '<img src="https://via.placeholder.com/100x100.png?text=LOL3" alt="Funny 3" />' +
            '</div>';
            case "joke":
  message = '<iframe width="100%" height="315" src="https://www.youtube.com/embed/dQw4w9WgXcQ?autoplay=1" frameborder="0" allowfullscreen></iframe>';
  break;
          break;
      }

      popupText.innerHTML = message.replace(/\n/g, "<br>");
      popup.style.display = "block";
    }

    function hideModal() {
      document.getElementById("popup").style.display = "none";
    }

    function toggleDarkMode() {
      document.body.classList.toggle("dark-mode");
    }
  </script>

</body>
